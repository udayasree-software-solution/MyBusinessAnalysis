<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/window_background"
                tools:context=".ui.fragments.BusinessListFragment">

    <LinearLayout
            android:id="@+id/business_list_date_layout"
            android:weightSum="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputLayout
                android:layout_weight="0.85"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            <EditText
                    android:id="@+id/business_list_date_id"
                    android:hint="@string/selected_date"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:editable="false"
                    android:focusable="false"
                    android:gravity="center"
                    android:focusableInTouchMode="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
                android:src="@drawable/ic_calendar"
                android:layout_weight="0.15"
                android:tint="@android:color/holo_orange_dark"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/business_list_recycler_id"
            android:layout_above="@+id/business_list_layout"
            android:layout_below="@+id/business_list_date_layout"
            android:layout_margin="6dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    <TextView
            android:id="@+id/business_list_empty_id"
            android:layout_above="@+id/business_list_layout"
            android:layout_below="@+id/business_list_date_layout"
            android:gravity="center"
            android:layout_margin="6dp"
            android:text="@string/data_is_empty"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@android:color/holo_red_light"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    <LinearLayout
            android:id="@+id/business_list_layout"
            android:background="@color/colorAccent"
            android:orientation="vertical"
            android:padding="2dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:layout_weight="1"
                    android:background="@color/window_background"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                <TextView
                        android:text="Net Business"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:gravity="start|center"
                        android:background="@color/window_background"
                        android:maxLines="1"
                        android:paddingLeft="2dp"
                        android:singleLine="true"
                        android:layout_marginEnd="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                <ImageView
                        android:id="@+id/business_info_id"
                        android:src="@drawable/ic_info_16dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_16dp"
                        android:tint="@android:color/holo_blue_bright"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                    android:id="@+id/business_net_amount_id"
                    android:text="0/-"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                    android:gravity="end"
                    android:background="@color/window_background"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:paddingRight="2dp"
                    android:singleLine="true"
                    android:layout_marginStart="1dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:weightSum="2"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:paddingBottom="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Business Expenses"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:gravity="start|center"
                    android:background="@color/window_background"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:paddingLeft="2dp"
                    android:singleLine="true"
                    android:layout_marginEnd="1dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            <TextView
                    android:id="@+id/business_expenses_amount_id"
                    android:text="0/-"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                    android:gravity="end"
                    android:background="@color/window_background"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:paddingRight="2dp"
                    android:singleLine="true"
                    android:layout_marginStart="1dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:weightSum="2"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:paddingBottom="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Gross Business"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:gravity="start|center"
                    android:background="@color/window_background"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:paddingLeft="2dp"
                    android:singleLine="true"
                    android:layout_marginEnd="1dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            <TextView
                    android:id="@+id/business_gross_amount_id"
                    android:text="0/-"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                    android:gravity="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:background="@color/window_background"
                    android:layout_weight="1"
                    android:paddingRight="2dp"
                    android:layout_marginStart="1dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/business_add_fab_id"
            android:src="@drawable/ic_add"
            android:tint="@android:color/white"
            android:layout_above="@+id/business_list_layout"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</RelativeLayout>