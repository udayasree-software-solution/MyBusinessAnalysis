<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="6dp"
        android:background="@color/window_background"
        tools:context=".ui.fragments.AddBusinessFragmentNew">

    <FrameLayout
            android:layout_above="@id/outlet_business_bottom_layout"
            android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:id="@+id/outlet_business_purchase"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:id="@+id/outlet_business_calender_layout"
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <EditText
                        android:id="@+id/outlet_business_calender_text"
                        android:textAlignment="center"
                        android:layout_weight="0.8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                <ImageView
                        android:src="@drawable/ic_calendar"
                        android:tint="@android:color/holo_orange_dark"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
            </LinearLayout>

            <TextView
                    android:id="@+id/outlet_business_title"
                    android:layout_below="@+id/outlet_business_calender_layout"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/outlet_business_recyclerview"
                    android:layout_below="@+id/outlet_business_title"
                    android:background="@color/window_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </RelativeLayout>
    </FrameLayout>

    <View
            android:layout_above="@id/outlet_business_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:alpha="0.5"
            android:background="@android:color/black"/>

    <LinearLayout
            android:id="@+id/outlet_business_bottom_layout"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:gravity="center"
            android:weightSum="3"
            android:background="@color/green"
            android:layout_height="?android:actionBarSize">
        <TextView
                android:id="@+id/outlet_business_previous_id"
                android:text="@string/previous"
                android:textColor="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        <TextView
                android:id="@+id/outlet_business_next_id"
                android:text="@string/next"
                android:textColor="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
    </LinearLayout>
</RelativeLayout>