<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green"
        tools:context=".AddBusinessFragmentNew">

    <FrameLayout
            android:layout_above="@id/outlet_business_bottom_layout"
            android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:id="@+id/outlet_business_purchase"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        </RelativeLayout>
    </FrameLayout>

    <View
            android:layout_above="@id/outlet_business_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:alpha="0.5"
            android:background="@android:color/white"/>

    <LinearLayout
            android:id="@+id/outlet_business_bottom_layout"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:gravity="center"
            android:weightSum="3"
            android:layout_height="?android:actionBarSize">
        <TextView
                android:id="@+id/outlet_business_previous_id"
                android:text="@string/previous"
                android:textColor="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        <TextView
                android:id="@+id/outlet_business_next_id"
                android:text="@string/next"
                android:textColor="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
    </LinearLayout>
</RelativeLayout>