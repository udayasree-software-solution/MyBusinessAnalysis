<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="match_parent"
                                   android:layout_height="@dimen/nav_header_height"
                                   app:cardElevation="6dp"
                                   style="@style/ThemeOverlay.AppCompat.Dark">
    <RelativeLayout
            android:background="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/nav_header_banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"/>

        <ImageView
                android:id="@+id/nav_header_profile"
                android:layout_centerVertical="true"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="5dp"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/nav_header_profile"
                android:layout_alignTop="@+id/nav_header_profile"
                android:layout_marginTop="@dimen/margin_16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/nav_header_name"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

            <TextView
                    android:id="@+id/nav_header_mobile"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

            <TextView
                    android:id="@+id/nav_header_outletname"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>